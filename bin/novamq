#!/usr/bin/env python

from eventlet.green import zmq
import eventlet

from novamq import routers


context = zmq.Context(1)
fanout = routers.PubSubRouter(
    context, "tcp://127.0.0.1:6800", "tcp://127.0.0.1:6801")
fanout.run()
rrobin = routers.RoundRobinRouter(
    context, "tcp://127.0.0.1:6802", "tcp://127.0.0.1:%d", 6900)
rrobin.run()
p2p = routers.PointToPointRouter(
    context, "tcp://127.0.0.1:6804", "tcp://127.0.0.1:6805")
p2p.run()

while True:
    eventlet.sleep(1)

